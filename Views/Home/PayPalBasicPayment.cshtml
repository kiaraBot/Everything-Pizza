<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12 text-center">
                <h2>Make a Payment with PayPal</h2>

                <form action="https://www.sandbox.PayPal.com/cgi-bin/webscr" method="post">

                    <input type="hidden" name="cmd" value="_xclick" />
                    <input type="hidden" name="business" value="Mystic6872-facilitator@comcast.net" />

                    <p class="doWhite">@Html.Label("Payment for: ") @Html.TextBox("item_name")</p>
                    <p class="doWhite">@Html.Label("Amount paid: ") @Html.TextBox("amount", 0.0)</p>
                    <input type="submit" value="Donate" />

                </form>
            </div>
        </div>
    </div>
</div>
