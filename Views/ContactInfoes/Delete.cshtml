@model EverythingPizza.Models.ContactInfo

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-left" style="color: #6daf27;
    font-family: 'Kodchasan', sans-serif; font-size: 28px">
    Are you sure you want to delete this contact?
</h2>
<br />
<br>

<div>
    <dl class="dl-horizontal; text-center" style="color: burlywood;
    font-family: 'Kodchasan', sans-serif; font-size: x-large">
        <dd >
            @Html.DisplayFor(model => model.FirstName)&ensp;
            @Html.DisplayFor(model => model.LastName)

            &emsp;
            @Html.DisplayFor(model => model.Email)
        </dd>   
        <br />

        <form asp-action="Delete" >
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-link btn-lg" style="font-size: larger" />
            <br />
            <br />
            <div class="text-left" style="font-size: large">
                <a asp-action="Edit" asp-route-id="@Model.Id">Back to Edit </a>
                <br />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </dl>
</div>
